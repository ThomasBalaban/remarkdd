include partials/navigation.jade
include partials/header.jade

doctype html
html(lang='en' ng-app="myApp")
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title= title
		link(href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet")
		link(href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet")

		link(rel='stylesheet', href='/bebas-styles.css')
		link(rel='stylesheet', href='/nunito-styles.css')
		link(rel='stylesheet', href='/chunk-styles.css')
		link(rel='stylesheet', href='/stylesheet.css')
	body
		header
			div.header.cf(header)
				+header()
		div.main-content
			block mainContent
			div.page
				div.content
					block content
		script(src="https://code.jquery.com/jquery-2.2.0.min.js")
		script(src="/angular.js")
		script(src="/angular-route.min.js")
		script(src="/angular-animate.min.js")
		script(src="/angularApp.js")
		script(src="/angularControllers.js")